---
// Mobile App Header - Airbnb Style
interface Props {
  title?: string;
  showBack?: boolean;
  showLogo?: boolean;
}

const {
  title,
  showBack = false,
  showLogo = true
} = Astro.props;
---

<!-- Mobile App Header -->
<header class="fixed top-0 left-0 right-0 z-40 bg-white border-b border-gray-100 md:hidden safe-area-top">
  <div class="flex items-center justify-center px-4 h-14 relative">

    <!-- Left: Back Button (if needed) -->
    {showBack && (
      <div class="absolute left-4">
        <button onclick="history.back()" class="p-2 text-gray-700 hover:bg-gray-100 rounded-full">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        </button>
      </div>
    )}

    <!-- Center: Logo or Title -->
    {title ? (
      <h1 class="text-lg font-semibold text-gray-900">{title}</h1>
    ) : (
      <img
        src="/images/uploads/sba-transparent.png"
        alt="Shallow Bay Advisors"
        class="h-18 w-auto"
      />
    )}

  </div>
</header>

<style>
  .safe-area-top {
    padding-top: env(safe-area-inset-top);
  }
</style>