---
// Mobile App Header - Airbnb Style
interface Props {
  title?: string;
  showBack?: boolean;
  showLogo?: boolean;
}

const {
  title,
  showBack = false,
  showLogo = true
} = Astro.props;
---

<!-- Mobile App Header -->
<header class="fixed top-0 left-0 right-0 z-40 bg-white border-b border-gray-100 md:hidden safe-area-top">
  <div class="flex items-center justify-between px-4 h-14">

    <!-- Left: Back Button or Logo -->
    <div class="flex items-center">
      {showBack ? (
        <button onclick="history.back()" class="p-2 -ml-2 text-gray-700 hover:bg-gray-100 rounded-full">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        </button>
      ) : showLogo && (
        <img
          src="/images/uploads/sba-transparent.png"
          alt="SBA"
          class="h-8 w-auto"
        />
      )}
    </div>

    <!-- Center: Title -->
    {title && (
      <div class="absolute left-1/2 transform -translate-x-1/2">
        <h1 class="text-lg font-semibold text-gray-900">{title}</h1>
      </div>
    )}

    <!-- Right: Profile/Menu -->
    <button class="p-2 -mr-2 text-gray-700 hover:bg-gray-100 rounded-full">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
      </svg>
    </button>

  </div>
</header>

<style>
  .safe-area-top {
    padding-top: env(safe-area-inset-top);
  }
</style>