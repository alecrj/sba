---
// Mobile Bottom Navigation - Airbnb App Style
const currentPath = Astro.url.pathname;

// Helper function to check if current page is active
const isActive = (path: string) => {
  if (path === '/' && currentPath === '/') return true;
  if (path !== '/' && currentPath.startsWith(path)) return true;
  return false;
};
---

<!-- Mobile Bottom Navigation Bar -->
<div class="fixed bottom-0 left-0 right-0 z-50 bg-white border-t border-gray-200 sm:hidden safe-area-bottom">
  <div class="grid grid-cols-5 h-16">

    <!-- Find -->
    <a
      href="/"
      class={`flex flex-col items-center justify-center space-y-1 transition-colors ${
        isActive('/') ? 'text-sba-navy' : 'text-gray-500'
      }`}
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width={isActive('/') ? '2.5' : '2'}>
        <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
      </svg>
      <span class="text-xs font-medium">Find</span>
    </a>

    <!-- About -->
    <a
      href="/about"
      class={`flex flex-col items-center justify-center space-y-1 transition-colors ${
        isActive('/about') ? 'text-sba-navy' : 'text-gray-500'
      }`}
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width={isActive('/about') ? '2.5' : '2'}>
        <path stroke-linecap="round" stroke-linejoin="round" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <span class="text-xs font-medium">About</span>
    </a>

    <!-- Services -->
    <a
      href="/services"
      class={`flex flex-col items-center justify-center space-y-1 transition-colors ${
        isActive('/services') ? 'text-sba-navy' : 'text-gray-500'
      }`}
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width={isActive('/services') ? '2.5' : '2'}>
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
      </svg>
      <span class="text-xs font-medium">Services</span>
    </a>

    <!-- Contact -->
    <a
      href="/contact"
      class={`flex flex-col items-center justify-center space-y-1 transition-colors ${
        isActive('/contact') ? 'text-sba-navy' : 'text-gray-500'
      }`}
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width={isActive('/contact') ? '2.5' : '2'}>
        <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
      </svg>
      <span class="text-xs font-medium">Contact</span>
    </a>

    <!-- Book Tour -->
    <a
      href="/book-consultation"
      class={`flex flex-col items-center justify-center space-y-1 transition-colors ${
        isActive('/book-consultation') ? 'text-sba-navy' : 'text-gray-500'
      }`}
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width={isActive('/book-consultation') ? '2.5' : '2'}>
        <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
      </svg>
      <span class="text-xs font-medium">Book</span>
    </a>

  </div>
</div>


<style>
  .safe-area-bottom {
    padding-bottom: env(safe-area-inset-bottom);
  }
</style>