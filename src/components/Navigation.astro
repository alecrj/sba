---
// Heimdall-Inspired Ultra-Clean Navigation
const currentPath = Astro.url.pathname;

// Helper function to check if current page is active
const isActive = (path: string) => {
  if (path === '/' && currentPath === '/') return true;
  if (path !== '/' && currentPath.startsWith(path)) return true;
  return false;
};
---

<nav id="main-nav" class="fixed top-0 left-0 right-0 z-50 bg-white/20 backdrop-blur-xl border-b border-white/30 shadow-lg transition-all duration-300 ease-in-out">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <div class="flex items-center justify-between h-20">

      <!-- Logo (Left) - 2x bigger -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center">
          <img
            src="/images/uploads/sba-transparent.png"
            alt="Shallow Bay Advisors"
            class="h-16 w-auto"
          />
        </a>
      </div>

      <!-- Center Navigation Links -->
      <div class="hidden lg:flex items-center justify-center flex-1 space-x-6">
        <a
          href="/"
          class="text-sm font-medium text-sba-navy hover:text-sba-navy-dark transition-colors duration-200 px-3 py-2 rounded-full hover:bg-white/20 backdrop-blur-sm"
        >
          Home
        </a>
        <a
          href="/about"
          class="text-sm font-medium text-sba-navy hover:text-sba-navy-dark transition-colors duration-200 px-3 py-2 rounded-full hover:bg-white/20 backdrop-blur-sm"
        >
          About
        </a>
        <a
          href="/properties"
          class="text-sm font-medium text-sba-navy hover:text-sba-navy-dark transition-colors duration-200 px-3 py-2 rounded-full hover:bg-white/20 backdrop-blur-sm"
        >
          Properties
        </a>
      </div>

      <!-- Right Side: Book Tour Button -->
      <div class="hidden lg:flex items-center">
        <a
          href="/book-consultation"
          class="bg-sba-navy/90 backdrop-blur-sm text-white px-5 py-2.5 rounded-full text-sm font-medium hover:bg-sba-navy transition-all duration-200 shadow-md hover:shadow-lg border border-sba-navy/30"
        >
          Book Tour
        </a>
      </div>

      <!-- Mobile menu button -->
      <div class="lg:hidden">
        <button
          type="button"
          id="mobile-menu-button"
          class="p-2 text-sba-navy hover:text-sba-navy-dark transition-colors duration-200 rounded-full hover:bg-white/20 backdrop-blur-sm"
          aria-label="Toggle menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden lg:hidden border-t border-white/30 bg-white/20 backdrop-blur-xl">
      <div class="px-6 py-6">

        <!-- Mobile Search -->
        <div class="mb-6">
          <div class="bg-gray-50 rounded-xl p-4 space-y-4 border border-gray-200">
            <div>
              <label class="block text-xs font-semibold text-gray-700 mb-2">Where</label>
              <input
                type="text"
                placeholder="Search locations..."
                class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm bg-white text-gray-900 placeholder-gray-500"
              />
            </div>
            <div class="grid grid-cols-2 gap-4">
              <div>
                <label class="block text-xs font-semibold text-gray-700 mb-2">Size</label>
                <select class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm bg-white text-gray-900">
                  <option value="">Any size</option>
                  <option value="small">5K - 25K SF</option>
                  <option value="medium">25K - 100K SF</option>
                  <option value="large">100K+ SF</option>
                </select>
              </div>
              <div>
                <label class="block text-xs font-semibold text-gray-700 mb-2">Type</label>
                <select class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm bg-white text-gray-900">
                  <option value="">All types</option>
                  <option value="warehouse">Warehouse</option>
                  <option value="distribution">Distribution</option>
                  <option value="manufacturing">Manufacturing</option>
                </select>
              </div>
            </div>
            <button class="w-full bg-sba-navy text-white py-3 rounded-lg font-medium hover:bg-sba-navy-dark transition-colors">
              Search Properties
            </button>
          </div>
        </div>

        <!-- Mobile Menu Links -->
        <div class="space-y-4">
          <a
            href="/"
            class="block text-base font-medium text-sba-navy hover:text-sba-navy-dark transition-colors duration-200 py-3 px-4 rounded-lg hover:bg-white/20 backdrop-blur-sm"
          >
            Home
          </a>
          <a
            href="/about"
            class="block text-base font-medium text-sba-navy hover:text-sba-navy-dark transition-colors duration-200 py-3 px-4 rounded-lg hover:bg-white/20 backdrop-blur-sm"
          >
            About
          </a>
          <a
            href="/properties"
            class="block text-base font-medium text-sba-navy hover:text-sba-navy-dark transition-colors duration-200 py-3 px-4 rounded-lg hover:bg-white/20 backdrop-blur-sm"
          >
            Properties
          </a>
          <a
            href="/book-consultation"
            class="block bg-sba-navy/90 backdrop-blur-sm text-white text-center py-3 rounded-lg font-medium hover:bg-sba-navy transition-colors duration-200 border border-sba-navy/30"
          >
            Book Tour
          </a>
        </div>
      </div>
    </div>
  </div>
</nav>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // AirBnb-style navigation scroll behavior
    let lastScrollY = window.scrollY;
    const nav = document.getElementById('main-nav');

    function updateNavOnScroll() {
      const currentScrollY = window.scrollY;

      if (currentScrollY > lastScrollY && currentScrollY > 80) {
        // Scrolling down & past initial threshold - hide nav
        nav.style.transform = 'translateY(-100%)';
      } else {
        // Scrolling up or at top - show nav
        nav.style.transform = 'translateY(0)';
      }

      lastScrollY = currentScrollY;
    }

    // Throttle scroll events for performance
    let ticking = false;
    window.addEventListener('scroll', function() {
      if (!ticking) {
        requestAnimationFrame(updateNavOnScroll);
        ticking = true;
        setTimeout(() => { ticking = false; }, 10);
      }
    });

    // Mobile menu functionality
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', function() {
        mobileMenu.classList.toggle('hidden');

        // Toggle hamburger to X icon
        const paths = mobileMenuButton.querySelectorAll('svg path');
        if (mobileMenu.classList.contains('hidden')) {
          // Show hamburger
          paths.forEach(path => path.setAttribute('d', 'M4 6h16M4 12h16M4 18h16'));
        } else {
          // Show X
          paths.forEach(path => path.setAttribute('d', 'M6 18L18 6M6 6l12 12'));
        }
      });

      // Close mobile menu when clicking outside
      document.addEventListener('click', function(event) {
        if (!mobileMenuButton.contains(event.target) && !mobileMenu.contains(event.target)) {
          mobileMenu.classList.add('hidden');
          const paths = mobileMenuButton.querySelectorAll('svg path');
          paths.forEach(path => path.setAttribute('d', 'M4 6h16M4 12h16M4 18h16'));
        }
      });

      // Close mobile menu on desktop resize
      window.addEventListener('resize', function() {
        if (window.innerWidth >= 1024) {
          mobileMenu.classList.add('hidden');
          const paths = mobileMenuButton.querySelectorAll('svg path');
          paths.forEach(path => path.setAttribute('d', 'M4 6h16M4 12h16M4 18h16'));
        }
      });
    }

  });
</script>