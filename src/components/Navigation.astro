---
// Heimdall-Inspired Ultra-Clean Navigation
const currentPath = Astro.url.pathname;

// Helper function to check if current page is active
const isActive = (path: string) => {
  if (path === '/' && currentPath === '/') return true;
  if (path !== '/' && currentPath.startsWith(path)) return true;
  return false;
};
---

<nav id="main-nav" class="fixed top-0 left-0 right-0 z-50 bg-white/20 backdrop-blur-xl border-b border-white/30 shadow-lg transition-all duration-300 ease-in-out hidden sm:block">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <div class="flex items-center justify-between h-20">

      <!-- Logo (Left) - 2x bigger -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center">
          <img
            src="/images/uploads/sba-transparent.png"
            alt="Shallow Bay Advisors"
            class="h-16 w-auto"
          />
        </a>
      </div>

      <!-- Center Navigation Links -->
      <div class="hidden sm:flex items-center justify-center flex-1 space-x-6">
        <a
          href="/"
          class="text-sm font-medium text-sba-navy hover:text-sba-navy-dark transition-colors duration-200 px-3 py-2 rounded-full hover:bg-white/20 backdrop-blur-sm"
        >
          Find
        </a>
        <a
          href="/about"
          class="text-sm font-medium text-sba-navy hover:text-sba-navy-dark transition-colors duration-200 px-3 py-2 rounded-full hover:bg-white/20 backdrop-blur-sm"
        >
          About
        </a>
        <a
          href="/services"
          class="text-sm font-medium text-sba-navy hover:text-sba-navy-dark transition-colors duration-200 px-3 py-2 rounded-full hover:bg-white/20 backdrop-blur-sm"
        >
          Services
        </a>
        <a
          href="/contact"
          class="text-sm font-medium text-sba-navy hover:text-sba-navy-dark transition-colors duration-200 px-3 py-2 rounded-full hover:bg-white/20 backdrop-blur-sm"
        >
          Contact
        </a>
      </div>

      <!-- Right Side: Book Tour Button -->
      <div class="hidden sm:flex items-center">
        <a
          href="/book-consultation"
          class="bg-sba-navy/90 backdrop-blur-sm text-white px-5 py-2.5 rounded-full text-sm font-medium hover:bg-sba-navy transition-all duration-200 shadow-md hover:shadow-lg border border-sba-navy/30"
        >
          Book Tour
        </a>
      </div>

    </div>

  </div>
</nav>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // AirBnb-style navigation scroll behavior
    let lastScrollY = window.scrollY;
    const nav = document.getElementById('main-nav');

    function updateNavOnScroll() {
      const currentScrollY = window.scrollY;

      if (currentScrollY > lastScrollY && currentScrollY > 80) {
        // Scrolling down & past initial threshold - hide nav
        nav.style.transform = 'translateY(-100%)';
      } else {
        // Scrolling up or at top - show nav
        nav.style.transform = 'translateY(0)';
      }

      lastScrollY = currentScrollY;
    }

    // Throttle scroll events for performance
    let ticking = false;
    window.addEventListener('scroll', function() {
      if (!ticking) {
        requestAnimationFrame(updateNavOnScroll);
        ticking = true;
        setTimeout(() => { ticking = false; }, 10);
      }
    });


  });
</script>