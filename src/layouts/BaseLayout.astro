          about_subtitle: "Tu socio de confianza en bienes raíces comerciales del sur de Florida",

          // Contact
          contact_title: "Contáctanos",
          contact_subtitle: "Ponte en contacto con nuestro equipo",

          // Common
          loading: "Cargando...",
          error: "Error",
          success: "Éxito",
          back: "Atrás",
          next: "Siguiente",
          submit: "Enviar",
          cancel: "Cancelar",
          close: "Cerrar"
        }
      };

      // Global translation function
      window.translateElement = function(element, lang) {
        const key = element.getAttribute('data-translate');
        if (key && window.SBATranslations[lang] && window.SBATranslations[lang][key]) {
          element.textContent = window.SBATranslations[lang][key];
        }
      };

      // Global page translation function
      window.translatePage = function(lang) {
        // Update all elements with data-translate attribute
        const elements = document.querySelectorAll('[data-translate]');
        elements.forEach(element => {
          window.translateElement(element, lang);
        });

        // Store language preference
        localStorage.setItem('selectedLanguage', lang);

        // Update document language attribute
        document.documentElement.lang = lang;

        // Trigger custom event for other components to listen to
        window.dispatchEvent(new CustomEvent('languageChanged', { detail: { language: lang } }));
      };

      // Auto-translate on page load
      window.addEventListener('DOMContentLoaded', function() {
        const savedLang = localStorage.getItem('selectedLanguage') || 'en';
        if (savedLang !== 'en') {
          window.translatePage(savedLang);
        }
      });

      console.log('Global language system loaded');

      // Netlify Identity removed

      // Mobile menu functionality
      function toggleMobileMenu() {
        const menu = document.getElementById('mobile-menu');
        if (menu) {
          menu.classList.toggle('hidden');
        }
      }

      // Make mobile menu function globally available
      window.toggleMobileMenu = toggleMobileMenu;

      // Close mobile menu when clicking outside
      document.addEventListener('click', function(event) {
        const menu = document.getElementById('mobile-menu');
        const button = event.target.closest('[aria-label="Open menu"]');
        
        if (menu && !menu.contains(event.target) && !button) {
          menu.classList.add('hidden');
        }
      });

      // Smooth scroll for anchor links
      document.addEventListener('click', function(event) {
        const target = event.target.closest('a[href^="#"]');
        if (target) {
          event.preventDefault();
          const id = target.getAttribute('href').substring(1);
          const element = document.getElementById(id);
          if (element) {
            element.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          }
        }
      });
    </script>
  </body>
</html>