---
// About Page - Shallow Bay Advisors Commercial Real Estate
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

// Team members
const teamMembers = [
  {
    name: "Steve Martinez",
    title: "Principal Broker",
    bio: "Licensed commercial real estate broker specializing in industrial properties from Miami-Dade to Port St. Lucie.",
    image: "/images/team/placeholder-executive.jpg"
  },
  {
    name: "Maria Rodriguez",
    title: "Senior Associate",
    bio: "Industrial specialist focused on warehouse and distribution facilities across Miami-Dade.",
    image: "/images/team/placeholder-associate.jpg"
  },
  {
    name: "David Chen",
    title: "Market Analyst",
    bio: "Market data specialist providing comprehensive analysis for industrial real estate investments.",
    image: "/images/team/placeholder-analyst.jpg"
  }
];

// Markets served
const markets = [
  {
    name: "Miami-Dade County",
    areas: ["Doral", "Hialeah", "Medley", "Airport West", "Downtown Miami"]
  },
  {
    name: "Broward County",
    areas: ["Fort Lauderdale", "Pompano Beach", "Davie", "Sunrise", "Hollywood"]
  },
  {
    name: "Palm Beach County",
    areas: ["West Palm Beach", "Riviera Beach", "Boca Raton", "Delray Beach"]
  }
];
---

<BaseLayout
  title="About Us | Shallow Bay Advisors"
  description="Premier commercial real estate brokerage specializing in warehouse and industrial properties from Miami-Dade to Port St. Lucie. Licensed, experienced, and focused on results."
>
  <Navigation />

  <main class="pt-44 md:pt-28">

    <!-- Hero Section -->
    <section class="section-padding-lg bg-gradient-to-br from-white via-neutral-50 to-sba-gray-light/30">
      <div class="container-sba">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="heading-hero mb-6 md:mb-8">
            Industrial
            <span class="block gradient-sba">Premier Brokerage</span>
          </h1>
          <p class="text-body-lg mb-8 md:mb-12 max-w-3xl mx-auto">
            Shallow Bay Advisors delivers unparalleled expertise in commercial real estate,
            specializing in warehouse and industrial properties from Miami-Dade all the way to Port St. Lucie.
          </p>
        </div>
      </div>
    </section>

    <!-- Company Overview -->
    <section class="section-padding bg-white">
      <div class="container-sba">
        <div class="max-w-6xl mx-auto">
          <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">

            <!-- Content -->
            <div>
              <h2 class="heading-section mb-6 md:mb-8">
                Expertise That
                <span class="text-sba-gray">Delivers Results</span>
              </h2>

              <div class="space-y-4 md:space-y-6 text-body">
                <p>
                  Founded on the principle that commercial real estate requires specialized knowledge,
                  Shallow Bay Advisors has established itself as the trusted partner for
                  warehouse and industrial property transactions.
                </p>

                <p>
                  Our team combines deep market knowledge with cutting-edge technology to deliver
                  exceptional results for tenants, landlords, and investors. We understand the
                  unique requirements of industrial businesses and provide tailored solutions
                  that drive success.
                </p>

                <p>
                  Licensed and insured in the State of Florida, we maintain the highest standards
                  of professionalism and ethics in every transaction.
                </p>
              </div>

              <!-- Key Stats -->
              <div class="grid grid-cols-2 gap-6 md:gap-8 mt-8 md:mt-12">
                <div>
                  <div class="text-2xl md:text-3xl font-black text-sba-navy mb-2">Licensed</div>
                  <div class="text-sm md:text-base text-sba-gray-dark">Florida Real Estate Brokerage</div>
                </div>
                <div>
                  <div class="text-2xl md:text-3xl font-black text-sba-navy mb-2">Specialized</div>
                  <div class="text-sm md:text-base text-sba-gray-dark">Industrial & Warehouse Focus</div>
                </div>
              </div>
            </div>

            <!-- Visual -->
            <div class="relative order-first lg:order-last">
              <div class="aspect-[4/3] bg-sba-gray-light/20 rounded-2xl md:rounded-3xl overflow-hidden">
                <div class="w-full h-full bg-gradient-to-br from-sba-navy/10 to-sba-gray/10 flex items-center justify-center">
                  <div class="text-center text-sba-navy">
                    <div class="w-16 h-16 md:w-20 md:h-20 bg-sba-navy rounded-2xl flex items-center justify-center mx-auto mb-4">
                      <svg class="w-8 h-8 md:w-10 md:h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16l7-3 7 3z"/>
                      </svg>
                    </div>
                    <div class="text-base md:text-lg font-semibold">Professional Excellence</div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Team Section -->
    <section class="section-padding bg-neutral-50">
      <div class="container-sba">
        <div class="max-w-6xl mx-auto">

          <!-- Section Header -->
          <div class="text-center mb-12 md:mb-16">
            <h2 class="heading-section mb-4 md:mb-6">
              Our Team
            </h2>
            <p class="text-body-lg max-w-3xl mx-auto">
              Experienced professionals dedicated to delivering exceptional results
              in commercial real estate
            </p>
          </div>

          <!-- Team Grid -->
          <div class="grid-team">
            {teamMembers.map((member, index) => (
              <div class="card-team">
                <div class="aspect-square bg-sba-gray-light/20 rounded-2xl md:rounded-3xl mb-4 md:mb-6 overflow-hidden">
                  <div class="w-full h-full bg-gradient-to-br from-sba-navy/10 to-sba-gray/10 flex items-center justify-center">
                    <div class="w-16 h-16 md:w-20 md:h-20 bg-sba-navy rounded-2xl flex items-center justify-center">
                      <svg class="w-8 h-8 md:w-10 md:h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                      </svg>
                    </div>
                  </div>
                </div>

                <h3 class="text-xl md:text-2xl font-black text-sba-navy mb-2">{member.name}</h3>
                <p class="text-base md:text-lg font-semibold text-sba-gray-dark mb-3 md:mb-4">{member.title}</p>
                <p class="text-sm md:text-base text-sba-gray-dark leading-relaxed">{member.bio}</p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Markets Section -->
    <section class="section-padding bg-white">
      <div class="container-sba">
        <div class="max-w-6xl mx-auto">

          <!-- Section Header -->
          <div class="text-center mb-12 md:mb-16">
            <h2 class="heading-section mb-4 md:mb-6">
              Markets We Serve
            </h2>
            <p class="text-body-lg max-w-3xl mx-auto">
              Comprehensive coverage from Miami-Dade to Port St. Lucie's premier industrial corridors
            </p>
          </div>

          <!-- Markets Grid -->
          <div class="grid-features">
            {markets.map((market, index) => (
              <div class="card-feature bg-neutral-50">
                <h3 class="text-xl md:text-2xl font-black text-sba-navy mb-4 md:mb-6">{market.name}</h3>
                <div class="space-y-2 md:space-y-3">
                  {market.areas.map(area => (
                    <div class="flex items-center">
                      <div class="w-2 h-2 bg-sba-navy rounded-full mr-3 flex-shrink-0"></div>
                      <span class="text-sm md:text-base text-sba-gray-dark font-medium">{area}</span>
                    </div>
                  ))}
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Services Overview -->
    <section class="section-padding bg-gradient-to-br from-neutral-50 to-sba-gray-light/20">
      <div class="container-sba">
        <div class="max-w-6xl mx-auto">

          <!-- Section Header -->
          <div class="text-center mb-12 md:mb-16">
            <h2 class="heading-section mb-4 md:mb-6">
              What We Do
            </h2>
            <p class="text-body-lg max-w-3xl mx-auto">
              Comprehensive commercial real estate services tailored to industrial markets
            </p>
          </div>

          <!-- Services Grid -->
          <div class="grid-features">

            <!-- Tenant Representation -->
            <div class="card-feature bg-white">
              <div class="w-12 h-12 md:w-16 md:h-16 bg-sba-navy rounded-2xl flex items-center justify-center mb-4 md:mb-6">
                <svg class="w-6 h-6 md:w-8 md:h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16l7-3 7 3z"/>
                </svg>
              </div>
              <h3 class="heading-card mb-3 md:mb-4">Tenant Representation</h3>
              <p class="text-body mb-4 md:mb-6">
                Find the perfect warehouse or industrial space for your business needs with expert guidance.
              </p>
              <div class="space-y-2">
                <div class="flex items-center text-xs md:text-sm">
                  <div class="w-2 h-2 bg-sba-navy rounded-full mr-3"></div>
                  <span class="text-sba-gray-dark">Site Selection</span>
                </div>
                <div class="flex items-center text-xs md:text-sm">
                  <div class="w-2 h-2 bg-sba-navy rounded-full mr-3"></div>
                  <span class="text-sba-gray-dark">Lease Negotiation</span>
                </div>
                <div class="flex items-center text-xs md:text-sm">
                  <div class="w-2 h-2 bg-sba-navy rounded-full mr-3"></div>
                  <span class="text-sba-gray-dark">Market Analysis</span>
                </div>
              </div>
            </div>

            <!-- Landlord Services -->
            <div class="card-feature bg-white">
              <div class="w-12 h-12 md:w-16 md:h-16 bg-sba-navy rounded-2xl flex items-center justify-center mb-4 md:mb-6">
                <svg class="w-6 h-6 md:w-8 md:h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/>
                </svg>
              </div>
              <h3 class="heading-card mb-3 md:mb-4">Landlord Representation</h3>
              <p class="text-body mb-4 md:mb-6">
                Maximize occupancy and value for your commercial properties with strategic marketing.
              </p>
              <div class="space-y-2">
                <div class="flex items-center text-xs md:text-sm">
                  <div class="w-2 h-2 bg-sba-navy rounded-full mr-3"></div>
                  <span class="text-sba-gray-dark">Property Marketing</span>
                </div>
                <div class="flex items-center text-xs md:text-sm">
                  <div class="w-2 h-2 bg-sba-navy rounded-full mr-3"></div>
                  <span class="text-sba-gray-dark">Tenant Screening</span>
                </div>
                <div class="flex items-center text-xs md:text-sm">
                  <div class="w-2 h-2 bg-sba-navy rounded-full mr-3"></div>
                  <span class="text-sba-gray-dark">Market Positioning</span>
                </div>
              </div>
            </div>

            <!-- Investment Sales -->
            <div class="card-feature bg-white sm:col-span-2 lg:col-span-1">
              <div class="w-12 h-12 md:w-16 md:h-16 bg-sba-navy rounded-2xl flex items-center justify-center mb-4 md:mb-6">
                <svg class="w-6 h-6 md:w-8 md:h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                </svg>
              </div>
              <h3 class="heading-card mb-3 md:mb-4">Investment Sales</h3>
              <p class="text-body mb-4 md:mb-6">
                Expert guidance for buying and selling commercial real estate investments.
              </p>
              <div class="space-y-2">
                <div class="flex items-center text-xs md:text-sm">
                  <div class="w-2 h-2 bg-sba-navy rounded-full mr-3"></div>
                  <span class="text-sba-gray-dark">Property Valuation</span>
                </div>
                <div class="flex items-center text-xs md:text-sm">
                  <div class="w-2 h-2 bg-sba-navy rounded-full mr-3"></div>
                  <span class="text-sba-gray-dark">Market Insights</span>
                </div>
                <div class="flex items-center text-xs md:text-sm">
                  <div class="w-2 h-2 bg-sba-navy rounded-full mr-3"></div>
                  <span class="text-sba-gray-dark">Transaction Management</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="section-padding bg-sba-navy text-white">
      <div class="container-sba text-center">
        <h2 class="heading-section text-white mb-4 md:mb-6">
          Ready to Work With Us?
        </h2>
        <p class="text-body-lg text-sba-gray-light max-w-2xl mx-auto mb-8 md:mb-12">
          Experience the difference that specialized knowledge and dedicated service can make
          for your commercial real estate needs.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 md:gap-6 justify-center items-center">
          <a href="/properties" class="btn-secondary w-full sm:w-auto text-center">
            VIEW PROPERTIES
          </a>
          <div class="hidden sm:flex items-center gap-4 text-sba-gray">
            <span class="w-px h-8 bg-sba-gray"></span>
            <span class="text-sm uppercase tracking-wider">OR</span>
            <span class="w-px h-8 bg-sba-gray"></span>
          </div>
          <a href="/contact" class="btn-ghost text-white hover:text-sba-gray-light w-full sm:w-auto text-center">
            Contact Our Team
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  /* Enhanced typography */
  .gradient-sba {
    background: linear-gradient(135deg, #1e3a5f 0%, #2d4a6b 50%, #8b9199 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Premium card effects */
  .hover\:-translate-y-2:hover {
    transform: translateY(-8px);
  }

  /* Smooth scroll */
  html {
    scroll-behavior: smooth;
  }

  /* Mobile responsive improvements */
  @media (max-width: 640px) {
    .container {
      padding-left: 1rem;
      padding-right: 1rem;
    }
  }
</style>