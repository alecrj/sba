---
// About Us Page - Streamlined & Focused
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import MobileAppHeader from '../components/MobileAppHeader.astro';
import Footer from '../components/Footer.astro';

// Team members
const teamMembers = [
  {
    name: "Steve Martinez",
    title: "Principal Broker",
    bio: "Licensed commercial real estate broker specializing in industrial properties from Miami-Dade to Port St. Lucie.",
    image: "/images/team/placeholder-executive.jpg"
  },
  {
    name: "Maria Rodriguez",
    title: "Senior Associate",
    bio: "Industrial specialist focused on warehouse and distribution facilities across Miami-Dade.",
    image: "/images/team/placeholder-associate.jpg"
  },
  {
    name: "David Chen",
    title: "Market Analyst",
    bio: "Market data specialist providing comprehensive analysis for industrial real estate investments.",
    image: "/images/team/placeholder-analyst.jpg"
  }
];
---

<BaseLayout
  title="About Us | Shallow Bay Advisors"
  description="Meet the licensed commercial real estate professionals at Shallow Bay Advisors. Specializing in warehouse and industrial properties from Miami-Dade to Port St. Lucie."
>
  <Navigation />
  <MobileAppHeader />

  <main class="pt-20">
    <!-- Hero Section -->
    <section class="pt-16 md:pt-28 pb-12 md:pb-20">
      <div class="max-w-4xl mx-auto px-6 text-center">
        <h1 class="text-3xl md:text-5xl font-light text-gray-900 mb-6 font-['Poppins'] tracking-tight leading-tight">
          About Us
        </h1>
        <p class="text-lg md:text-xl text-gray-600 max-w-2xl mx-auto leading-relaxed">
          Premier commercial real estate brokerage specializing in warehouse and industrial properties from Miami-Dade to Port St. Lucie.
        </p>
      </div>
    </section>

    <!-- Team Section -->
    <section class="py-16">
      <div class="max-w-6xl mx-auto px-6">
        <div class="text-center mb-16">
          <h2 class="text-2xl md:text-3xl font-semibold text-gray-900 mb-4">
            Meet Our Team
          </h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            Licensed professionals dedicated to delivering exceptional results in commercial real estate
          </p>
        </div>

        <div class="space-y-16">
          {teamMembers.map((member, index) => (
            <div class={`grid md:grid-cols-2 gap-12 items-center ${index % 2 === 1 ? 'md:grid-flow-col-dense' : ''}`}>
              <!-- Photo -->
              <div class={index % 2 === 1 ? 'md:col-start-2' : ''}>
                <div class="aspect-square bg-gray-200 rounded-2xl overflow-hidden">
                  <div class="w-full h-full bg-gradient-to-br from-sba-navy to-blue-700 flex items-center justify-center">
                    <svg class="w-32 h-32 text-white opacity-60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                    </svg>
                  </div>
                </div>
              </div>

              <!-- Content -->
              <div class={index % 2 === 1 ? 'md:col-start-1' : ''}>
                <div class="space-y-4">
                  <div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-3">{member.name}</h3>
                    <p class="text-sba-navy font-medium mb-4">{member.title}</p>
                  </div>
                  <p class="text-gray-600 leading-relaxed">
                    {member.bio}
                  </p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Values Section -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-6xl mx-auto px-6">
        <div class="text-center mb-16">
          <h2 class="text-2xl md:text-3xl font-semibold text-gray-900 mb-4">
            Why Choose Us
          </h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            What sets us apart in South Florida's industrial real estate market
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="bg-white border border-gray-200 rounded-xl p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-3">No Cost to Tenants</h3>
            <p class="text-gray-600 text-sm">
              Our services are completely free to tenants - landlords pay our commission
            </p>
          </div>

          <div class="bg-white border border-gray-200 rounded-xl p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-3">Industrial Specialization</h3>
            <p class="text-gray-600 text-sm">
              Exclusive focus on warehouse and industrial properties - we know this market inside out
            </p>
          </div>

          <div class="bg-white border border-gray-200 rounded-xl p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-3">Licensed & Experienced</h3>
            <p class="text-gray-600 text-sm">
              Florida licensed professionals with deep market knowledge and proven track record
            </p>
          </div>

          <div class="bg-white border border-gray-200 rounded-xl p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-3">Regional Coverage</h3>
            <p class="text-gray-600 text-sm">
              Complete coverage from Miami-Dade to Port St. Lucie's premier industrial corridors
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact CTA Section -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-6xl mx-auto px-6">
        <div class="bg-white border border-gray-200 rounded-xl p-8 md:p-12 text-center">
          <h2 class="text-2xl md:text-3xl font-semibold text-gray-900 mb-4">
            Ready to Work Together?
          </h2>
          <p class="text-lg text-gray-600 mb-8 max-w-2xl mx-auto">
            Let our experienced team help you find the perfect industrial property solution.
            Professional representation at no cost to tenants.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href="/contact"
              class="inline-flex items-center px-8 py-3 bg-sba-navy text-white font-semibold rounded-lg"
            >
              Contact Our Team
            </a>
            <a
              href="/book-consultation"
              class="inline-flex items-center px-8 py-3 border-2 border-sba-navy text-sba-navy font-semibold rounded-lg"
            >
              Schedule Consultation
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

