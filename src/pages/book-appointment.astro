---
import BaseLayout from '../layouts/BaseLayout.astro';
import CalendarBooking from '../components/CalendarBooking.astro';
---

<BaseLayout title="Book an Appointment - Shallow Bay Advisors">
  <div class="min-h-screen bg-gradient-to-br from-blue-900 via-blue-800 to-purple-800">
    <!-- Header -->
    <div class="container mx-auto px-4 py-16">
      <div class="text-center mb-12">
        <h1 class="text-4xl lg:text-5xl font-bold text-white mb-6">
          Schedule Your Consultation
        </h1>
        <p class="text-xl text-blue-100 max-w-3xl mx-auto">
          Ready to find the perfect commercial space? Book a consultation with our experts and let's discuss your requirements.
        </p>
      </div>

      <!-- Calendar Booking Component -->
      <div class="max-w-4xl mx-auto">
        <CalendarBooking
          title="Book Your Consultation"
          subtitle="Choose your preferred appointment type and time"
          buttonText="Schedule Appointment"
        />
      </div>

      <!-- Additional Info -->
      <div class="mt-16 grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        <!-- Contact Option 1 -->
        <div class="text-center bg-white/10 backdrop-blur-lg rounded-2xl p-6 border border-white/20">
          <div class="w-16 h-16 bg-green-500/20 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-white mb-2">Call Directly</h3>
          <p class="text-blue-200 text-sm mb-4">Prefer to speak right now?</p>
          <a href="tel:954-937-9667" class="text-green-400 font-semibold text-lg hover:text-green-300 transition-colors">
            (954) 937-9667
          </a>
        </div>

        <!-- Contact Option 2 -->
        <div class="text-center bg-white/10 backdrop-blur-lg rounded-2xl p-6 border border-white/20">
          <div class="w-16 h-16 bg-blue-500/20 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-white mb-2">Email Us</h3>
          <p class="text-blue-200 text-sm mb-4">Send us your requirements</p>
          <a href="mailto:info@warehouselocating.com" class="text-blue-400 font-semibold hover:text-blue-300 transition-colors">
            info@warehouselocating.com
          </a>
        </div>

        <!-- Contact Option 3 -->
        <div class="text-center bg-white/10 backdrop-blur-lg rounded-2xl p-6 border border-white/20">
          <div class="w-16 h-16 bg-purple-500/20 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-white mb-2">Same Day</h3>
          <p class="text-blue-200 text-sm mb-4">Need urgent assistance?</p>
          <p class="text-purple-400 font-semibold">Available today</p>
        </div>
      </div>

      <!-- Back to Home -->
      <div class="text-center mt-12">
        <a
          href="/"
          class="inline-flex items-center text-blue-200 hover:text-white transition-colors"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18"/>
          </svg>
          Back to Home
        </a>
      </div>
    </div>
  </div>
</BaseLayout>