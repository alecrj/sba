---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import MobileAppHeader from '../components/MobileAppHeader.astro';
import Footer from '../components/Footer.astro';
import CalendarBooking from '../components/CalendarBooking.astro';
---

<BaseLayout title="Book Property Tour | Shallow Bay Advisors">
  <Navigation />
  <MobileAppHeader />

  <main class="pt-20">
    <!-- Hero Section -->
    <section class="pt-16 md:pt-28 pb-12 md:pb-20">
      <div class="max-w-4xl mx-auto px-6 text-center">
        <h1 class="text-3xl md:text-5xl font-light text-gray-900 mb-6 font-['Poppins'] tracking-tight leading-tight">
          Book Property Tour
        </h1>
        <p class="text-lg md:text-xl text-gray-600 max-w-2xl mx-auto leading-relaxed">
          Schedule a tour of any property that caught your interest. Our team will show you around and answer all your questions.
        </p>
      </div>
    </section>


    <!-- Property Tour Booking -->
    <section class="py-16">
      <div class="max-w-2xl mx-auto px-6">
        <div class="bg-white rounded-xl p-8 shadow-lg border border-gray-200">
          <CalendarBooking
            title=""
            subtitle=""
            buttonText="Schedule Property Tour"
          />
        </div>
      </div>
    </section>

    <!-- What to Expect -->
    <section class="py-16">
      <div class="max-w-4xl mx-auto px-6">
        <div class="text-center mb-12">
          <h2 class="text-2xl md:text-3xl font-semibold text-gray-900 mb-4">
            What to Expect on Your Tour
          </h2>
          <p class="text-gray-600">
            Professional property tours designed to help you make informed decisions
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          <div class="bg-white border border-gray-200 rounded-xl p-6 text-center hover:shadow-lg transition-all duration-200">
            <div class="w-12 h-12 mx-auto mb-4 bg-sba-navy/10 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-sba-navy" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-3">
              Detailed Walkthrough
            </h3>
            <p class="text-gray-600">
              See every inch of the property including loading docks, office space, utilities, and special features.
            </p>
          </div>

          <div class="bg-white border border-gray-200 rounded-xl p-6 text-center hover:shadow-lg transition-all duration-200">
            <div class="w-12 h-12 mx-auto mb-4 bg-sba-navy/10 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-sba-navy" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-3">
              Expert Insights
            </h3>
            <p class="text-gray-600">
              Get answers about zoning, permits, lease terms, market rates, and operational considerations.
            </p>
          </div>

          <div class="bg-white border border-gray-200 rounded-xl p-6 text-center hover:shadow-lg transition-all duration-200">
            <div class="w-12 h-12 mx-auto mb-4 bg-sba-navy/10 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-sba-navy" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-3">
              Your Timeline
            </h3>
            <p class="text-gray-600">
              Tours typically last 30-45 minutes. No pressure, no obligation - just honest guidance.
            </p>
          </div>
        </div>

        <!-- Additional Benefits -->
        <div class="mt-12 bg-gray-50 rounded-xl p-8">
          <div class="text-center">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">
              Why Choose Shallow Bay Advisors?
            </h3>
            <div class="grid md:grid-cols-2 gap-6 max-w-2xl mx-auto">
              <div class="flex items-start space-x-3">
                <div class="w-5 h-5 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                  <svg class="w-3 h-3 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <div>
                  <p class="text-gray-700 font-medium">Deep Local Knowledge</p>
                  <p class="text-gray-600 text-sm">15+ years in South Florida industrial markets</p>
                </div>
              </div>
              <div class="flex items-start space-x-3">
                <div class="w-5 h-5 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                  <svg class="w-3 h-3 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <div>
                  <p class="text-gray-700 font-medium">Completely Free Service</p>
                  <p class="text-gray-600 text-sm">Landlords pay our commission - zero cost to you</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

  </main>

  <Footer />
</BaseLayout>


