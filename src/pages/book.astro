---
// 2025 Modern Book a Tour Page
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';

// Get available properties for the dropdown
let availableProperties = [];
try {
  const allWarehouses = await getCollection('warehouses');
  availableProperties = allWarehouses
    .filter(w => w.data.availability === 'available')
    .map(w => ({ title: w.data.title, slug: w.data.slug }));
} catch (error) {
  console.log('No properties available for booking');
}

// Time slots for booking
const timeSlots = [
  '9:00 AM',
  '10:00 AM',
  '11:00 AM',
  '12:00 PM',
  '1:00 PM',
  '2:00 PM',
  '3:00 PM',
  '4:00 PM',
  '5:00 PM'
];
---

<BaseLayout
  title="Book a Tour | Shallow Bay Industrial"
  description="Schedule your warehouse tour instantly. Pick a time that works and we'll confirm with reminders. Same-day tours available for most properties."
>
  <Navigation />

  <!-- 2025 MODERN BOOK A TOUR PAGE -->
  <main class="pt-20">

    <!-- Hero Section -->
    <section class="py-20 bg-black text-white relative overflow-hidden">
      <!-- Background -->
      <div class="absolute inset-0">
        <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-electric-500/10 rounded-full blur-3xl"></div>
        <div class="absolute bottom-1/4 right-1/4 w-80 h-80 bg-electric-500/5 rounded-full blur-3xl"></div>
        <!-- Grid pattern -->
        <div class="absolute inset-0 opacity-[0.02]" style="background-image: radial-gradient(circle at 1px 1px, white 1px, transparent 0); background-size: 40px 40px;"></div>
      </div>

      <div class="container mx-auto px-4 text-center relative z-10">
        <h1 class="text-5xl md:text-7xl font-black leading-tight tracking-tighter mb-6">
          BOOK A
          <span class="block gradient-text">TOUR</span>
        </h1>
        <p class="text-xl text-neutral-300 max-w-2xl mx-auto">
          Pick a time that works. We'll confirm and send reminders.
        </p>
      </div>
    </section>

    <!-- Booking Form Section -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">

          <!-- Form Header -->
          <div class="text-center mb-16">
            <h2 class="text-3xl md:text-5xl font-black text-black leading-tight tracking-tighter mb-6">
              SCHEDULE YOUR VISIT
            </h2>
            <p class="text-xl text-neutral-600">
              Same-day tours available for most properties
            </p>
          </div>

          <!-- Booking Form -->
          <form id="booking-form" class="space-y-8">
            <!-- Contact Information -->
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label class="block text-sm font-black text-black mb-3 uppercase tracking-wider">Name *</label>
                <input
                  type="text"
                  name="name"
                  required
                  class="w-full h-14 bg-white border-2 border-neutral-200 rounded-xl text-black px-4 focus:border-electric-500 focus:ring-0 focus:outline-none transition-all duration-200 font-semibold"
                  placeholder="Your Name"
                />
              </div>
              <div>
                <label class="block text-sm font-black text-black mb-3 uppercase tracking-wider">Email *</label>
                <input
                  type="email"
                  name="email"
                  required
                  class="w-full h-14 bg-white border-2 border-neutral-200 rounded-xl text-black px-4 focus:border-electric-500 focus:ring-0 focus:outline-none transition-all duration-200 font-semibold"
                  placeholder="your@email.com"
                />
              </div>
            </div>

            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label class="block text-sm font-black text-black mb-3 uppercase tracking-wider">Phone *</label>
                <input
                  type="tel"
                  name="phone"
                  required
                  class="w-full h-14 bg-white border-2 border-neutral-200 rounded-xl text-black px-4 focus:border-electric-500 focus:ring-0 focus:outline-none transition-all duration-200 font-semibold"
                  placeholder="(555) 123-4567"
                />
              </div>
              <div>
                <label class="block text-sm font-black text-black mb-3 uppercase tracking-wider">Company</label>
                <input
                  type="text"
                  name="company"
                  class="w-full h-14 bg-white border-2 border-neutral-200 rounded-xl text-black px-4 focus:border-electric-500 focus:ring-0 focus:outline-none transition-all duration-200 font-semibold"
                  placeholder="Company Name"
                />
              </div>
            </div>

            <!-- Property Selection -->
            <div>
              <label class="block text-sm font-black text-black mb-3 uppercase tracking-wider">Property Interest</label>
              <select
                name="property"
                class="w-full h-14 bg-white border-2 border-neutral-200 rounded-xl text-black px-4 focus:border-electric-500 focus:ring-0 focus:outline-none transition-all duration-200 font-semibold"
              >
                <option value="">General Tour - Show me what's available</option>
                {availableProperties.map(property => (
                  <option value={property.slug}>{property.title}</option>
                ))}
              </select>
            </div>

            <!-- Date and Time Selection -->
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label class="block text-sm font-black text-black mb-3 uppercase tracking-wider">Preferred Date *</label>
                <input
                  type="date"
                  name="date"
                  required
                  min={new Date().toISOString().split('T')[0]}
                  class="w-full h-14 bg-white border-2 border-neutral-200 rounded-xl text-black px-4 focus:border-electric-500 focus:ring-0 focus:outline-none transition-all duration-200 font-semibold"
                />
              </div>
              <div>
                <label class="block text-sm font-black text-black mb-3 uppercase tracking-wider">Preferred Time *</label>
                <select
                  name="time"
                  required
                  class="w-full h-14 bg-white border-2 border-neutral-200 rounded-xl text-black px-4 focus:border-electric-500 focus:ring-0 focus:outline-none transition-all duration-200 font-semibold"
                >
                  <option value="">Select a time</option>
                  {timeSlots.map(time => (
                    <option value={time}>{time}</option>
                  ))}
                </select>
              </div>
            </div>

            <!-- Additional Information -->
            <div>
              <label class="block text-sm font-black text-black mb-3 uppercase tracking-wider">Requirements & Notes</label>
              <textarea
                name="notes"
                rows="4"
                class="w-full bg-white border-2 border-neutral-200 rounded-xl text-black p-4 focus:border-electric-500 focus:ring-0 focus:outline-none transition-all duration-200 resize-none font-semibold"
                placeholder="Tell us about your space requirements, timeline, special needs, etc."
              ></textarea>
            </div>

            <!-- Submit Button -->
            <div class="text-center pt-8">
              <button
                type="submit"
                class="btn-primary rounded-xl text-lg px-16 py-4 hover:shadow-xl transform hover:scale-105 transition-all duration-300"
              >
                BOOK MY TOUR
              </button>
              <p class="text-sm text-neutral-500 mt-4">
                We'll confirm your tour within 2 hours and send calendar reminders
              </p>
            </div>
          </form>
        </div>
      </div>
    </section>

    <!-- Tour Information -->
    <section class="py-20 bg-neutral-50">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-5xl font-black text-black leading-tight tracking-tighter mb-6">
            WHAT TO EXPECT
          </h2>
          <p class="text-xl text-neutral-600 max-w-2xl mx-auto">
            Professional guided tours with detailed property information
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-12 max-w-5xl mx-auto">
          <!-- Professional Guide -->
          <div class="text-center">
            <div class="w-20 h-20 bg-black text-white rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
            </div>
            <h3 class="text-xl font-black text-black mb-4 uppercase tracking-wider">Professional Guide</h3>
            <p class="text-neutral-600 leading-relaxed">
              Expert industrial real estate professional will show you properties that match your needs.
            </p>
          </div>

          <!-- Detailed Information -->
          <div class="text-center">
            <div class="w-20 h-20 bg-black text-white rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
            </div>
            <h3 class="text-xl font-black text-black mb-4 uppercase tracking-wider">Detailed Information</h3>
            <p class="text-neutral-600 leading-relaxed">
              Get specs, pricing, lease terms, and answers to all your questions during the tour.
            </p>
          </div>

          <!-- Next Steps -->
          <div class="text-center">
            <div class="w-20 h-20 bg-black text-white rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            </div>
            <h3 class="text-xl font-black text-black mb-4 uppercase tracking-wider">Fast Next Steps</h3>
            <p class="text-neutral-600 leading-relaxed">
              If you like what you see, we can start lease negotiations immediately.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Alternative Contact -->
    <section class="py-20 bg-black text-white">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-3xl md:text-5xl font-black leading-tight tracking-tighter mb-6">
          NEED TO TALK FIRST?
        </h2>
        <p class="text-xl text-neutral-300 max-w-2xl mx-auto mb-12">
          Have questions about properties or want to discuss your requirements before booking?
        </p>

        <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
          <a href="/contact" class="btn-secondary rounded-xl text-lg px-12 py-4 hover:shadow-xl transform hover:scale-105 transition-all duration-300">
            CONTACT US FIRST
          </a>
          <div class="flex items-center gap-4 text-neutral-400">
            <span class="w-px h-8 bg-neutral-600"></span>
            <span class="text-sm uppercase tracking-wider">OR</span>
            <span class="w-px h-8 bg-neutral-600"></span>
          </div>
          <a href="tel:***-***-****" class="text-white font-mono text-lg hover:text-electric-400 transition-colors duration-200">
            Call (***) ***-****
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  /* Form select styling */
  select {
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%23000000' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='m6 8 4 4 4-4'/%3e%3c/svg%3e");
    background-position: right 12px center;
    background-repeat: no-repeat;
    background-size: 16px 16px;
    padding-right: 40px;
    appearance: none;
  }

  /* Date input styling */
  input[type="date"] {
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%23000000' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z'/%3e%3c/svg%3e");
    background-position: right 12px center;
    background-repeat: no-repeat;
    background-size: 16px 16px;
    padding-right: 40px;
  }

  /* Remove date input default styling */
  input[type="date"]::-webkit-calendar-picker-indicator {
    opacity: 0;
    position: absolute;
    right: 12px;
    width: 16px;
    height: 16px;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const bookingForm = document.getElementById('booking-form');

    if (bookingForm) {
      bookingForm.addEventListener('submit', async function(e) {
        e.preventDefault();

        const submitBtn = bookingForm.querySelector('button[type="submit"]');
        const originalText = submitBtn.textContent;

        // Show loading state
        submitBtn.disabled = true;
        submitBtn.textContent = 'BOOKING YOUR TOUR...';

        try {
          // Collect form data
          const formData = new FormData(bookingForm);
          const data = Object.fromEntries(formData.entries());

          // Add source and timestamp
          data.source = 'tour_booking';
          data.timestamp = new Date().toISOString();

          // In a real implementation, submit to your booking system
          console.log('Tour booking data:', data);

          // Simulate API call
          await new Promise(resolve => setTimeout(resolve, 2000));

          // Show success message
          const successMessage = document.createElement('div');
          successMessage.className = 'fixed inset-0 bg-black/80 flex items-center justify-center z-50 p-4';
          successMessage.innerHTML = `
            <div class="bg-white rounded-2xl p-8 max-w-md w-full text-center">
              <div class="w-16 h-16 bg-success-500 rounded-2xl flex items-center justify-center mx-auto mb-6">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <h3 class="text-2xl font-black text-black mb-4">TOUR BOOKED!</h3>
              <p class="text-neutral-600 mb-6">We'll confirm your tour within 2 hours and send calendar reminders.</p>
              <button onclick="this.parentElement.parentElement.remove()" class="btn-primary rounded-xl px-8 py-3">
                CLOSE
              </button>
            </div>
          `;
          document.body.appendChild(successMessage);

          // Reset form
          bookingForm.reset();

        } catch (error) {
          console.error('Error booking tour:', error);
          alert('There was an error booking your tour. Please try again or call us directly at (***) ***-****.');
        } finally {
          // Reset button state
          submitBtn.disabled = false;
          submitBtn.textContent = originalText;
        }
      });
    }

    // Set minimum date to today
    const dateInput = document.querySelector('input[type="date"]');
    if (dateInput) {
      const today = new Date().toISOString().split('T')[0];
      dateInput.min = today;

      // Set default date to tomorrow
      const tomorrow = new Date();
      tomorrow.setDate(tomorrow.getDate() + 1);
      dateInput.value = tomorrow.toISOString().split('T')[0];
    }
  });
</script>