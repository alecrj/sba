---
// Shallow Bay Advisors - Modern Commercial Real Estate Platform
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

// Property types for search filters
const propertyTypes = [
  "Warehouse",
  "Distribution Center",
  "Manufacturing",
  "Flex Space",
  "Office/Warehouse",
  "Cold Storage"
];

// Location options
const locations = [
  "Miami-Dade County",
  "Broward County",
  "Palm Beach County",
  "All South Florida"
];

// Featured properties data
const featuredProperties = [
  {
    id: "doral-warehouse-25k",
    title: "Modern Distribution Center",
    location: "Doral, Miami-Dade",
    size: "25,000 SF",
    price: "$8.50/SF/Yr",
    image: "/images/uploads/warehouse1.png",
    rating: 4.9,
    features: ["Dock High", "32' Clear", "Highway Access"],
    available: "Available Now"
  },
  {
    id: "hialeah-flex-15k",
    title: "Flex Industrial Space",
    location: "Hialeah, Miami-Dade",
    size: "15,000 SF",
    price: "$7.25/SF/Yr",
    image: "/images/uploads/warehouse2.png",
    rating: 4.8,
    features: ["Grade Level", "Office", "Parking"],
    available: "Available"
  },
  {
    id: "pompano-warehouse-40k",
    title: "Cold Storage Facility",
    location: "Pompano Beach, Broward",
    size: "40,000 SF",
    price: "$12.00/SF/Yr",
    image: "/images/uploads/warehouse3.png",
    rating: 4.7,
    features: ["Refrigerated", "Rail Access", "24/7 Security"],
    available: "Coming Soon"
  },
  {
    id: "boca-manufacturing-30k",
    title: "Manufacturing Facility",
    location: "Boca Raton, Palm Beach",
    size: "30,000 SF",
    price: "$9.75/SF/Yr",
    image: "/images/uploads/warehouse4.png",
    rating: 4.9,
    features: ["Heavy Power", "Crane Ready", "Fenced Yard"],
    available: "Available"
  }
];
---

<BaseLayout
  title="Find Your Perfect Warehouse Space | Shallow Bay Advisors"
  description="South Florida's premier warehouse and industrial space platform. Search live inventory, book instant tours, and find your perfect commercial space."
>
  <Navigation />

  <main>
    <!-- Hero Section - Airbnb Style -->
    <section class="relative pt-20 pb-8 lg:pt-24 lg:pb-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

        <!-- Hero Content -->
        <div class="text-center max-w-4xl mx-auto mb-12">
          <h1 class="font-display text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 mb-6">
            Find warehouse space<br class="hidden sm:block">
            <span class="text-primary">anywhere in South Florida</span>
          </h1>
          <p class="text-lg sm:text-xl text-gray-600 max-w-2xl mx-auto">
            Discover and book the perfect industrial space for your business with live inventory and instant tours.
          </p>
        </div>

        <!-- Search Bar - Airbnb Style -->
        <div class="max-w-4xl mx-auto mb-8">
          <div class="bg-white rounded-full shadow-lg border border-gray-200 p-2">
            <div class="grid grid-cols-1 lg:grid-cols-4 gap-2">

              <!-- Location -->
              <div class="relative">
                <button class="w-full text-left p-4 rounded-full hover:bg-gray-50 transition-colors">
                  <div class="text-xs font-semibold text-gray-900 mb-1">Location</div>
                  <div class="text-sm text-gray-500">Where do you need space?</div>
                </button>
              </div>

              <!-- Property Type -->
              <div class="relative">
                <button class="w-full text-left p-4 rounded-full hover:bg-gray-50 transition-colors">
                  <div class="text-xs font-semibold text-gray-900 mb-1">Property Type</div>
                  <div class="text-sm text-gray-500">Warehouse, flex, etc.</div>
                </button>
              </div>

              <!-- Size -->
              <div class="relative">
                <button class="w-full text-left p-4 rounded-full hover:bg-gray-50 transition-colors">
                  <div class="text-xs font-semibold text-gray-900 mb-1">Size</div>
                  <div class="text-sm text-gray-500">Square footage needed</div>
                </button>
              </div>

              <!-- Search Button -->
              <div class="flex items-center justify-center lg:justify-end">
                <button class="btn btn-primary rounded-full w-full lg:w-auto px-8 py-4 flex items-center justify-center gap-2">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                  </svg>
                  <span class="hidden lg:inline">Search</span>
                </button>
              </div>

            </div>
          </div>
        </div>

      </div>
    </section>

    <!-- Featured Properties Section -->
    <section class="py-12 lg:py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

        <!-- Section Header -->
        <div class="flex items-center justify-between mb-8">
          <div>
            <h2 class="text-2xl lg:text-3xl font-display font-semibold text-gray-900 mb-2">
              Featured warehouse spaces
            </h2>
            <p class="text-gray-600">Hand-picked properties perfect for your business</p>
          </div>
          <a href="/properties" class="hidden lg:block btn btn-outline">
            Show all properties
          </a>
        </div>

        <!-- Properties Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
          {featuredProperties.map((property) => (
            <a href={`/properties/${property.id}`} class="card overflow-hidden group block">

              <!-- Property Image -->
              <div class="relative aspect-square overflow-hidden">
                <img
                  src={property.image}
                  alt={property.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                />
                <div class="absolute top-3 left-3">
                  <span class={`px-2 py-1 rounded-full text-xs font-medium ${
                    property.available === 'Available Now'
                      ? 'bg-green-100 text-green-800'
                      : property.available === 'Available'
                      ? 'bg-blue-100 text-blue-800'
                      : 'bg-orange-100 text-orange-800'
                  }`}>
                    {property.available}
                  </span>
                </div>
                <button class="absolute top-3 right-3 opacity-0 group-hover:opacity-100 transition-opacity bg-white/90 hover:bg-white p-2 rounded-full shadow-lg">
                  <svg class="w-4 h-4 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                  </svg>
                </button>
              </div>

              <!-- Property Details -->
              <div class="p-4">
                <div class="flex items-start justify-between mb-2">
                  <div class="flex-1 min-w-0">
                    <h3 class="font-semibold text-gray-900 truncate">
                      {property.title}
                    </h3>
                    <p class="text-sm text-gray-500 truncate">
                      {property.location}
                    </p>
                  </div>
                  <div class="flex items-center gap-1 ml-2">
                    <svg class="w-4 h-4 text-yellow-400 fill-current" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                    </svg>
                    <span class="text-sm font-medium text-gray-900">{property.rating}</span>
                  </div>
                </div>

                <div class="flex items-center gap-1 mb-3">
                  {property.features.slice(0, 2).map((feature) => (
                    <span class="px-2 py-1 bg-gray-100 text-gray-700 text-xs rounded-md font-medium">
                      {feature}
                    </span>
                  ))}
                  {property.features.length > 2 && (
                    <span class="px-2 py-1 bg-gray-100 text-gray-700 text-xs rounded-md font-medium">
                      +{property.features.length - 2}
                    </span>
                  )}
                </div>

                <div class="flex items-baseline gap-1">
                  <span class="font-semibold text-gray-900">{property.price}</span>
                  <span class="text-sm text-gray-500">â€¢ {property.size}</span>
                </div>
              </div>

            </a>
          ))}
        </div>

        <!-- Mobile View All Button -->
        <div class="lg:hidden text-center">
          <a href="/properties" class="btn btn-outline w-full sm:w-auto">
            Show all properties
          </a>
        </div>

      </div>
    </section>

    <!-- Categories Section -->
    <section class="py-12 lg:py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

        <div class="text-center mb-12">
          <h2 class="text-2xl lg:text-3xl font-display font-semibold text-gray-900 mb-4">
            Browse by property type
          </h2>
          <p class="text-gray-600 max-w-2xl mx-auto">
            Find the perfect industrial space for your specific business needs
          </p>
        </div>

        <div class="grid grid-cols-2 lg:grid-cols-3 gap-6">
          {propertyTypes.map((type, index) => (
            <a href={`/properties?type=${encodeURIComponent(type)}`}
               class="card p-6 text-center hover:bg-gray-50 transition-colors group">
              <div class="w-16 h-16 mx-auto mb-4 bg-gray-100 rounded-full flex items-center justify-center group-hover:bg-primary group-hover:text-white transition-colors">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
              </div>
              <h3 class="font-semibold text-gray-900 mb-1">{type}</h3>
              <p class="text-sm text-gray-500">Explore {type.toLowerCase()} options</p>
            </a>
          ))}
        </div>

      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 lg:py-20">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl lg:text-4xl font-display font-semibold text-gray-900 mb-6">
          Ready to find your perfect space?
        </h2>
        <p class="text-lg text-gray-600 mb-8 max-w-2xl mx-auto">
          Get personalized recommendations from our expert team. We'll help you find the ideal warehouse or industrial space for your business.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="btn btn-primary px-8 py-4">
            Get Expert Help
          </a>
          <a href="/properties" class="btn btn-outline px-8 py-4">
            Browse All Properties
          </a>
        </div>
      </div>
    </section>

  </main>

  <Footer />
</BaseLayout>

<style>
  /* Additional mobile-specific styles */
  @media (max-width: 640px) {
    .grid-mobile-1 {
      grid-template-columns: 1fr;
    }
  }

  /* Smooth animations */
  .card {
    transition: all 0.2s ease;
  }

  .card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 40px rgba(0,0,0,0.1);
  }

  /* Search bar enhancements */
  .search-section {
    backdrop-filter: blur(20px);
  }
</style>